XF86MonBrightness{Down,Up}
	xbacklight -{dec,inc} 5

XF86AudioMute
	amixer set Master toggle
XF86Audio{Lower,Raise}Volume
	amixer set Master 5%{-,+}

super + d
	dmenu_run
super + Return
	termite
super + l
	slock

super + shift + e
	matc --exit
super + F5
	matc --refresh
super + {_,shift +,alt +} {Up,Right,Down,Left}
	matc --{focus,move,reparent}-{up,right,down,left}
super + {Escape,grave}
	matc --view-{out,in}
super + {f,a}
	matc --view-{leaf,root}
alt + {shift + Tab,Tab}
	matc --view-{backward,forward}
super + Page_{Up,Down}
	matc --view-{backward,forward}
super + space
	matc --transpose
super + shift + {q,k}
	matc --{close,kill}-window

@XF86LaunchA
	scrot -se 'xclip -selection clipboard -t image/png -i $f && rm $f'
