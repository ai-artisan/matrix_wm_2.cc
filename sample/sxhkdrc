XF86MonBrightness{Down,Up}
	xbacklight -{dec,inc} 5

XF86AudioMute
	amixer set Master toggle
XF86Audio{Lower,Raise}Volume
	amixer set Master 5%{-,+}

@XF86LaunchA
	scrot -se 'xclip -selection clipboard -t image/png -i $f && mv $f ~/.cache/SCREEN_SHOT.png'

super + {space,Return}
	{dmenu_run,xterm}
super + {b,n}
	optirun {chromium,thunar}	
super + l
	physlock

super + shift + e
	tree_wm client exit
super + F5
	tree_wm client refresh
super + {_,shift +,alt +,ctrl +} {Up,Right,Down,Left}
	tree_wm client {focus,reorder,reparent,reorganize}-{up,right,down,left}
super + {Escape,grave}
	tree_wm client view-{out,in}
super + {_,shift} + f
	tree_wm client view-{leaf,root}
alt + {shift + Tab,Tab}
	tree_wm client view-{backward,forward}
super + Tab
	tree_wm client transpose
super + Page_{Up,Down}
	tree_wm client view-{backward,forward}
alt + F4
	tree_wm client close-window
super + shift + {q,k}
	tree_wm client {close,kill}-window
super + shift + l
	tree_wm client toggle-locking-active
